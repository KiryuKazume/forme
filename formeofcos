-- Function to set STANCE, STANCEWALK, and STANCESTART animations (AnimationId)
local function setStanceAnimations()
    local officer = workspace:FindFirstChild("Kiru_Kazuma") and workspace.Kiru_Kazuma:FindFirstChild("Officer")
    
    if officer then
        local animationFolder = officer:FindFirstChild("AnimationFolder")
        
        if animationFolder then
            -- Set STANCE animation
            local stance = animationFolder:FindFirstChild("STANCE")
            if stance and stance:IsA("Animation") then
                stance.AnimationId = "rbxassetid://133837789265810"
            end

            -- Set STANCEWALK animation
            local stanceWalk = animationFolder:FindFirstChild("STANCEWALK")
            if stanceWalk and stanceWalk:IsA("Animation") then
                stanceWalk.AnimationId = "rbxassetid://85725408047568"
            end

            -- Set STANCESTART animation
            local stanceStart = animationFolder:FindFirstChild("STANCESTART")
            if stanceStart and stanceStart:IsA("Animation") then
                stanceStart.AnimationId = "rbxassetid://93084592654310"
            end
        end
    end
end

-- Run the function immediately when the script is executed
setStanceAnimations()

-- Keybind InputBegan event
UserInputService.InputBegan:Connect(function(input, isProcessed)
    if isProcessed then return end
    if input.KeyCode == Enum.KeyCode.T then
        onPressR()
    elseif input.KeyCode == Enum.KeyCode.H then
        onPressH()
    elseif input.KeyCode == Enum.KeyCode.Z then
        updateUsername()  -- Cycle through players when Z is pressed
    elseif input.KeyCode == Enum.KeyCode.V then
        onPressC()
    elseif input.KeyCode == Enum.KeyCode.B then
        clearUsername()  -- Select "Nobody" when B is pressed
    end
end)
